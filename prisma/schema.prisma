generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  priority    Priority @default(low)
  status      Status   @default(open)
  createdAt   DateTime @default(now())
}

enum Priority {
  low
  medium
  high
}

enum Status {
  open
  in_progress
  closed
}
